#!/bin/bash
test098_mount() {
  local repo=$1
  local params=$2

  cvmfs_mount $repo $params
}

test098_unmount() {
  local repo=$1

  cvmfs_umount $repo
}

cleanup() {
  echo "cleanup $cvmfs_test_name"
  if [ "x$CVMFS_TEST_098_TMPFILE" != "x" ]; then
    echo ""
    echo ""
    echo "Log content:"
    cat $CVMFS_TEST_098_TMPFILE
    rm $CVMFS_TEST_098_TMPFILE

    # Clean up additional test file if it exists
    if [ -f "${CVMFS_TEST_098_TMPFILE}.nodelta" ]; then
      echo ""
      echo "No-delta test log content:"
      cat ${CVMFS_TEST_098_TMPFILE}.nodelta
      rm ${CVMFS_TEST_098_TMPFILE}.nodelta
    fi
  fi
}
